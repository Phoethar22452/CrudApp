<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<!-- Main site -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between	">
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i>All user</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update User</h2>
            <span class="text-light">Use The Below form to Update an account</span>
        </div>
        <!-- form handling -->
        <!-- include form -->
        <form method="POST" id="update_user">
            <div class="new_user">
                <div class="form-group">
                    <label for="name" class="text-light">Name</label>
                    <input type="hidden" name="id" value="<%= user._id %>">
                    <input type="text" name="name" id="name" value="<%= user.name %>" placeholder="Mark Steoaoki" >
                </div>
                <div class="form-group">
                    <label for="email" class="text-light">Email</label>
                    <input type="text" name="email" id="email" value="<%= user.email %>" placeholder="Example@gmail.com" >
                </div>
                <div class="form-group">
                    <label for="gender" class="text-light">Gender</label>
                    <div class="radio inline">
                        <input type="radio" name="gender" id="gender-1" value="Male" <%= user.gender=='Male'?'checked': ''%> >
                        <label for="gender-1" class="radio-label">Male</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" name="gender" id="gender-2" value="Female" <%= user.gender=='Female'?'checked':''%> >
                        <label for="gender-2" class="radio-label">Female</label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="status" class="text-light">Status</label>
                    <div class="radio inline">
                        <input type="radio" name="status" id="status-1" value="Active" <%= user.status=='Active'?'checked':''%> >
                        <label for="status-1" class="radio-label">Active</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" name="status" id="status-2" value="Inactive" <%= user.status =='Inactive'?'checked':''%> >
                        <label for="status-2" class="radio-label">Inactive</label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Save</button>
                </div>
            </div>
        </form>
        <!-- /include form -->
    </div>
</main>
<!-- /Main site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->